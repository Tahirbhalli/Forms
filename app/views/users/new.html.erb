<%= form_for @user do |f|%>

<label for="username">Username</label>
<%= f.text_field :username%>
<br>
<label for="email">Email</label>
<%= f.email_field :email%>
<br>
<label for="password">Username</label>
<%= f.password_field :password%>
<br>
<%= f.submit "Submit"%>
<%end%>




